<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:bos="urn:import:org.bonitasoft.console.client.common.view.uiBinded"
             xmlns:toolkit="urn:import:org.bonitasoft.web.toolkit.client.ui.component"
             xmlns:btn="urn:import:org.bonitasoft.web.toolkit.client.ui.component.button">

    <ui:with type="java.lang.String" field="BACK_BTN_LABEL"/>
    <ui:with type="java.lang.String" field="BACK_BTN_TOOLTIP"/>
    <ui:with type="com.google.gwt.safehtml.shared.SafeHtml" field="PAGE_TITLE"/>

    <bos:HtmlMarker>
        <span>
            <ui:safehtml from='{PAGE_TITLE}'/>
        </span>
        <btn:ButtonAction ui:field="backButton" label="{BACK_BTN_LABEL}"
                          tooltip="{BACK_BTN_TOOLTIP}" width="100%"/>
        <toolkit:IFrame ui:field="iFrame" height="720px"/>
    </bos:HtmlMarker>
</ui:UiBinder>
